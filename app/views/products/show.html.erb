<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>      
    </div>

    <div class="col-sm-8" class="review_box">
      <h4>Reviews</h4>
      <% if current_user =%>
        <%= form_for :review, url: product_reviews_path(@product) do |form| %>

        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: 'form-control' %>
          <br>
          <%= form.label :rating %>
          <%= form.select :rating, [1,2,3,4,5], class: 'form-control' %>
          <br>
          <%= form.submit 'Create Review', class: 'btn btn-primary' %>
        </div>
        <% end %>
      
      <% end %>
      
      <dl class="dl-horizontal">
        <% @product.reviews.each do |review| %>
        <dt><%= review.user.first_name %></dt>
        <dd><%= review.description %></dd>
        <dd><%= review.rating %> / 5</dd>
          <% if current_user.id == review.user_id%>
          <%= link_to fa_icon('trash'), product_review_url(@product, review), class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
          <% end %>
        <% end %>
      </dl>
    </div>

  </article>

</section>
